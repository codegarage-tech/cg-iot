<resources>

    <!-- Base application theme. -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textAllCaps">false</item>
        <item name="android:windowActionBar">false</item>
        <item name="windowActionBar">false</item>
        <!--<item name="android:windowAnimationStyle">@style/WindowAnimation</item>-->
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/activityTransition</item>
    </style>

    <style name="activityTransition" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>

    <style name="AppTheme" parent="AppBaseTheme"></style>

    <!-- Segmented RadioButton -->
    <style name="SegmentedRadioButton">
        <item name="android:textColor">@drawable/selector_segmented_radio_button_text_color</item>
        <item name="android:minHeight">33dp</item>
        <item name="android:minWidth">70dp</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="toolbar_base">
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@drawable/toolbar_bg</item>
    </style>

    <style name="TextSwitcherTitle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextSwitcherDescription">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/textColorSecondary</item>
    </style>

    <style name="SectionBar">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/textColorSecondary</item>
        <item name="android:ellipsize">end</item>
        <item name="android:background">@color/colorShadeBlueDark</item>
        <item name="android:padding">@dimen/dp_10</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAllCaps">false</item>
    </style>
       <!-- Address Error Appearance-->
    <style name="AddressErrorAppearance">
        <item name="android:textSize">@dimen/sp_12</item>
        <item name="android:textColor">@color/dark_grey</item>
    </style>

    <!-- Button Accent-->
    <style name="MainButtonAccent">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@drawable/comm_text_for_accent_button</item>
        <item name="android:gravity">left|center_horizontal|clip_horizontal</item>
        <item name="android:background">@drawable/comm_btn_bg_accent</item>
        <item name="android:layout_height">@dimen/comm_button_height</item>
        <item name="android:maxWidth">192dp</item>
        <item name="android:minWidth">104dp</item>
    </style>


</resources>
