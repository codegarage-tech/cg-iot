<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <include layout="@layout/toolbar_base" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPink"
        android:orientation="vertical"
        android:paddingRight="@dimen/dp_20">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_200"
                    android:layout_marginRight="-30dp"
                    android:background="@drawable/profile_shape_top_view"
                    android:orientation="horizontal"
                    android:paddingBottom="40dp">

                    <LinearLayout
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="match_parent"
                        android:layout_weight=".4"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/dp_120"
                            android:layout_height="@dimen/dp_120"
                            android:background="@drawable/circle_shadow_bg" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="match_parent"
                        android:layout_weight=".6"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/dp_10">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Md. Rashadul Alam"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_18"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dp_10"
                            android:text="+8801794620787"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_16" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Project Manager"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_16" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="BJIT Limited"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_16" />

                    </LinearLayout>

                </LinearLayout>

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/dp_10"
                        android:paddingRight="@dimen/dp_10">

                        <ss.anoop.awesometextinputlayout.AwesomeTextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dp_10"
                            android:padding="16dp"
                            app:borderColor="@color/colorPrimaryDark"
                            app:borderWidth="2dp"
                            app:cornerRadius="8dp">

                            <com.meembusoft.iot.view.ClearableEditText
                                android:layout_width="match_parent"
                                android:layout_height="42dp"
                                android:background="@drawable/selector_shipping_edt_bg"
                                android:completionThreshold="3"
                                android:drawableRight="@drawable/ic_cancel_black_24dp"
                                android:hint="First Name"
                                android:singleLine="true"
                                android:textColorHint="@color/colorWhiteOff" />

                        </ss.anoop.awesometextinputlayout.AwesomeTextInputLayout>

                        <ss.anoop.awesometextinputlayout.AwesomeTextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dp_10"
                            android:padding="16dp"
                            app:borderColor="@color/colorPrimaryDark"
                            app:borderWidth="2dp"
                            app:cornerRadius="8dp">

                            <com.meembusoft.iot.view.ClearableEditText
                                android:layout_width="match_parent"
                                android:layout_height="42dp"
                                android:background="@drawable/selector_shipping_edt_bg"
                                android:completionThreshold="3"
                                android:drawableRight="@drawable/ic_cancel_black_24dp"
                                android:hint="Last Name"
                                android:singleLine="true"
                                android:textColorHint="@color/colorWhiteOff" />

                        </ss.anoop.awesometextinputlayout.AwesomeTextInputLayout>

                        <ss.anoop.awesometextinputlayout.AwesomeTextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dp_10"
                            android:padding="16dp"
                            app:borderColor="@color/colorPrimaryDark"
                            app:borderWidth="2dp"
                            app:cornerRadius="8dp">

                            <com.meembusoft.iot.view.ClearableEditText
                                android:layout_width="match_parent"
                                android:layout_height="42dp"
                                android:background="@drawable/selector_shipping_edt_bg"
                                android:completionThreshold="3"
                                android:drawableRight="@drawable/ic_cancel_black_24dp"
                                android:hint="Email"
                                android:singleLine="true"
                                android:textColorHint="@color/colorWhiteOff" />

                        </ss.anoop.awesometextinputlayout.AwesomeTextInputLayout>

                        <ss.anoop.awesometextinputlayout.AwesomeTextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dp_10"
                            android:padding="16dp"
                            app:borderColor="@color/colorPrimaryDark"
                            app:borderWidth="2dp"
                            app:cornerRadius="8dp">

                            <com.meembusoft.iot.view.ClearableEditText
                                android:layout_width="match_parent"
                                android:layout_height="42dp"
                                android:background="@drawable/selector_shipping_edt_bg"
                                android:completionThreshold="3"
                                android:drawableRight="@drawable/ic_cancel_black_24dp"
                                android:hint="Phone"
                                android:singleLine="true"
                                android:textColorHint="@color/colorWhiteOff" />

                        </ss.anoop.awesometextinputlayout.AwesomeTextInputLayout>

                        <ss.anoop.awesometextinputlayout.AwesomeTextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dp_10"
                            android:padding="16dp"
                            app:borderColor="@color/colorPrimaryDark"
                            app:borderWidth="2dp"
                            app:cornerRadius="8dp">

                            <com.meembusoft.iot.view.ClearableEditText
                                android:layout_width="match_parent"
                                android:layout_height="42dp"
                                android:background="@drawable/selector_shipping_edt_bg"
                                android:completionThreshold="3"
                                android:drawableRight="@drawable/ic_cancel_black_24dp"
                                android:hint="Password"
                                android:singleLine="true"
                                android:textColorHint="@color/colorWhiteOff" />

                        </ss.anoop.awesometextinputlayout.AwesomeTextInputLayout>

                        <ss.anoop.awesometextinputlayout.AwesomeTextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dp_10"
                            android:padding="16dp"
                            app:borderColor="@color/colorPrimaryDark"
                            app:borderWidth="2dp"
                            app:cornerRadius="8dp">

                            <com.meembusoft.iot.view.ClearableEditText
                                android:layout_width="match_parent"
                                android:layout_height="42dp"
                                android:background="@drawable/selector_shipping_edt_bg"
                                android:completionThreshold="3"
                                android:drawableRight="@drawable/ic_cancel_black_24dp"
                                android:hint="Occupation"
                                android:singleLine="true"
                                android:textColorHint="@color/colorWhiteOff" />

                        </ss.anoop.awesometextinputlayout.AwesomeTextInputLayout>

                        <ss.anoop.awesometextinputlayout.AwesomeTextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dp_10"
                            android:padding="16dp"
                            app:borderColor="@color/colorPrimaryDark"
                            app:borderWidth="2dp"
                            app:cornerRadius="8dp">

                            <com.meembusoft.iot.view.ClearableEditText
                                android:layout_width="match_parent"
                                android:layout_height="42dp"
                                android:background="@drawable/selector_shipping_edt_bg"
                                android:completionThreshold="3"
                                android:drawableRight="@drawable/ic_cancel_black_24dp"
                                android:hint="Address"
                                android:singleLine="true"
                                android:textColorHint="@color/colorWhiteOff" />

                        </ss.anoop.awesometextinputlayout.AwesomeTextInputLayout>

                    </LinearLayout>

                </ScrollView>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

