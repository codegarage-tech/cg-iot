<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_device_settings_configuration"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_weight=".33"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_device_settings_configuration_wifi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="@dimen/dp_10">

            <ImageView
                android:id="@+id/iv_device_settings_configuration_wifi"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_marginBottom="@dimen/dp_5"
                android:tint="@color/black"
                app:srcCompat="@drawable/vector_wifi_primary" />

            <TextView
                android:id="@+id/tv_device_settings_configuration_wifi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wifi"
                android:textColor="@color/textColorSecondary" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_weight=".33"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_device_settings_configuration_bluetooth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="@dimen/dp_10">

            <ImageView
                android:id="@+id/iv_device_settings_configuration_bluetooth"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_marginBottom="@dimen/dp_5"
                android:tint="@color/black"
                app:srcCompat="@drawable/vector_bluetooth" />

            <TextView
                android:id="@+id/tv_device_settings_configuration_bluetooth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bluetooth"
                android:textColor="@color/textColorSecondary" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_weight=".33"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_device_settings_configuration_mobile_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="@dimen/dp_10">

            <ImageView
                android:id="@+id/iv_device_settings_configuration_mobile_data"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_marginBottom="@dimen/dp_5"
                android:tint="@color/black"
                app:srcCompat="@drawable/vector_mobile_data" />

            <TextView
                android:id="@+id/tv_device_settings_configuration_mobile_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mobile Data"
                android:textColor="@color/textColorSecondary" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>