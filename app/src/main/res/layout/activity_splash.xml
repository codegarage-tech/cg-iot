<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/screen_bg"
    android:padding="@dimen/dp_10">

    <ImageView
        android:id="@+id/iv_app_logo_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/iv_app_logo"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/dp_30" />

    <ImageView
        android:id="@+id/iv_app_logo"
        android:layout_width="@dimen/dp_200"
        android:layout_height="@dimen/dp_200"
        android:background="@drawable/vector_logo"
        android:layout_centerInParent="true"/>

    <ImageView
        android:id="@+id/iv_app_logo_short"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"
        android:layout_below="@+id/iv_app_logo"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/dp_30"
        android:background="@drawable/vector_logo_short" />

    <TextView
        android:id="@+id/tv_app_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:text=""
        android:textColor="@color/white"
        android:textSize="@dimen/sp_20" />

</RelativeLayout>
