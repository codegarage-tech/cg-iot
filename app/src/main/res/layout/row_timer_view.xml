<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/rl_driver_info"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

        <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"
            card_view:cardCornerRadius="0dp"
            card_view:cardElevation="@dimen/dp_5">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/dp_15">

                <LinearLayout
                    android:id="@+id/lin_lay_time_view"
                    android:layout_width="50dip"
                    android:layout_height="45dip"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_margin="@dimen/dp_10"
                    android:background="@drawable/shape_rounded_timer_teal">


                    <ImageView
                        android:layout_width="@dimen/dp_35"
                        android:layout_height="@dimen/dp_35"
                        android:gravity="center"
                        android:padding="@dimen/dp_5"
                        app:srcCompat="@drawable/vector_ic_water_pump_green"
                        android:tint="@color/colorGreenDark"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lin_lay_title_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerInParent="true"
                    android:layout_weight="1"
                    android:layout_marginTop="17dip"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_toRightOf="@+id/lin_lay_time_view"
                    android:layout_toLeftOf="@+id/row_image_view_option">
                    <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_gravity="center_vertical"
                        android:layout_toStartOf="@+id/lin_order_favourite"
                        android:layout_toLeftOf="@+id/lin_order_favourite"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="Md. Rashadul Alam"
                        android:textColor="@color/color_grey_800"
                        android:textSize="@dimen/sp_16"
                        android:textStyle="bold"/>


                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_4"
                        android:layout_toStartOf="@+id/lin_order_favourite"
                        android:layout_toLeftOf="@+id/lin_order_favourite"
                        android:text="April 5th, 8:00 PM - 9:00 PM"
                        android:textColor="@color/mal_text_secondary"
                        android:textSize="@dimen/sp_14"
                        android:paddingLeft="@dimen/dp_2"
                        android:paddingRight="@dimen/dp_2"/>

                </LinearLayout>

                <ImageView
                    android:id="@+id/row_image_view_option"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:background="?attr/selectableItemBackground"
                    android:paddingStart="@dimen/dp_10"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingTop="@dimen/dp_8"
                    android:paddingEnd="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_8"
                    app:srcCompat="@drawable/three_horizontal_dots" />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>


</RelativeLayout>