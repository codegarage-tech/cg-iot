<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.meembusoft.fcmmanager">

    <uses-permission android:name="android.permission.INTERNET" />

    <application>
        <activity
            android:name="com.meembusoft.fcmmanager.activity.FcmPayloadActivity"
            android:excludeFromRecents="true"
            android:noHistory="true"
            android:theme="@style/Theme.AppCompat.Light.Dialog" />

        <activity
            android:name="com.meembusoft.fcmmanager.activity.CopyToClipboardActivity"
            android:theme="@android:style/Theme.NoDisplay" />

        <activity
            android:name="com.meembusoft.fcmmanager.activity.AppNotificationsActivity"
            android:screenOrientation="portrait" />

        <service android:name="com.meembusoft.fcmmanager.service.FcmMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>