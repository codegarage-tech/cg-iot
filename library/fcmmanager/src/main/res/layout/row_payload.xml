<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?selectableItemBackground"
    app:cardCornerRadius="@dimen/payload_item_card_corner_radius">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item_selector"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/selector_background">

        <ImageView
            android:id="@+id/item_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="@dimen/unit_1"
            android:layout_marginTop="@dimen/unit_1"
            android:layout_marginRight="@dimen/unit_1"
            android:layout_marginBottom="@dimen/unit_1"
            android:tint="#44B0D1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="ContentDescription"
            tools:src="@drawable/ic_notifications_none_24dp" />

        <com.meembusoft.fcmmanager.views.TimeAgoTextView
            android:id="@+id/item_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/unit_1"
            android:layout_marginRight="@dimen/unit_12"
            android:lines="1"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="@+id/item_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/item_icon"
            tools:ignore="SmallSp"
            tools:text="3 min. ago" />

        <TextView
            android:id="@+id/item_raw"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/unit_12"
            android:layout_marginTop="@dimen/unit_1"
            android:layout_marginRight="@dimen/unit_12"
            android:layout_marginBottom="@dimen/unit_1"
            android:fontFamily="monospace"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item_icon"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="UnusedAttribute"
            tools:text="@tools:sample/lorem" />

        <TextView
            android:id="@+id/item_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/unit_12"
            android:layout_marginTop="@dimen/unit_1"
            android:layout_marginRight="@dimen/unit_12"
            android:layout_marginBottom="@dimen/unit_1"
            android:ellipsize="end"
            android:maxLines="4"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item_icon"
            app:layout_constraintVertical_bias="0.0"
            tools:text="@tools:sample/lorem"
            tools:visibility="visible" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/item_barrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="item_text,item_raw" />

        <Button
            android:id="@+id/item_btn_1"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item_barrier"
            tools:text="Button 1"
            tools:visibility="visible" />

        <Button
            android:id="@+id/item_btn_2"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintEnd_toStartOf="@+id/item_btn_1"
            app:layout_constraintTop_toBottomOf="@+id/item_barrier"
            tools:text="Button 2"
            tools:visibility="visible" />

        <Button
            android:id="@+id/item_btn_3"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintEnd_toStartOf="@+id/item_btn_2"
            app:layout_constraintTop_toBottomOf="@+id/item_barrier"
            tools:text="Button 3"
            tools:visibility="visible" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>